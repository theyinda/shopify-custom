{{ 'custom-collections.css' | asset_url | stylesheet_tag }}


<section class="custom-collection">
  <div class="container">
    <h2 class="header-text">{{ section.settings.header_text }}</h2>
    <p class="header-description">{{ section.settings.header_description }}</p>

    <div class="collection-grid">
      {% for block in section.blocks %}
        <div class="collection-item">
          <a href="{{ block.settings.collection.url }}">
            <img
              src="{{ block.settings.image | image_url: width: 500 }}"
              alt="{{ block.settings.collection.title }}"
              width=""
              height=""
              loading="lazy">
          </a>
          <p class="collection-title">{{ block.settings.collection.title }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Custom Collection",
    "settings": [
      {
        "type": "text",
        "id": "header_text",
        "label": "Section Title",
        "default": "Explore Our Collections"
      }, {
        "type": "textarea",
        "id": "header_description",
        "label": "Description",
        "default": "Discover the perfect furniture for your space."
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Collection Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Collection",
        "category": "Collection",
        "blocks": [
          {
            "type": "collection"
          }, {
            "type": "collection"
          }, {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}